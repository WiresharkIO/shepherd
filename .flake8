[flake8]
max-line-length = 100
require-plugins =
    # https://github.com/DmytroLitvinov/awesome-flake8-extensions

    ### Bugs & Code-Smells
    flake8-bugbear
    flake8-secure-coding-standard
    flake8-bandit
    flake8-builtins

    ### Clean Code
    flake8-comprehensions
    flake8-simplify
    flake8-eradicate
    flake8-commas

    ### Limitations
    flake8-blind-except
    # flake8-logging-format
    # flake8-print

    ### Documentation
    flake8-comments
    # flake8-docstrings
    # flake8-rst-docstrings

    ### Test-Improvements
    flake8-assertive

extend-ignore =
    # black-formatter-specific
    E203
    # hideous
    C812
    C815
    C813

per-file-ignores =
    # asserts (in tests are ok)
    software/python-package/tests/*: SCS108 S101
    # commented out code, TODO: finalize model
    *_model.py: E800
    # telnet for openOCD, for now, TODO: replace by direct ssh.run()
    software/shepherd-herd/shepherd_herd/__init__.py: S401 S312

exclude =
    software/shepherd-devicetest/*

count = True
statistics = True
